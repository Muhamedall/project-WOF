{
    "compilerOptions": {
      "target": "ES2020",             
      "module": "commonjs",           
      "strict": true,                 
      "esModuleInterop": true,        
      "resolveJsonModule": true,     
      "outDir": "./dist",            
      "rootDir": "./src",             
      
      "typeRoots": ["./node_modules/@types"], 
      "types": ["node"]               
    },
    "include": ["src/**/*"],          
    "exclude": ["node_modules", "dist"] 
  }
  